<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


  <android.support.v7.widget.CardView
      android:id="@+id/cv_item_feed"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/padding_medium"
      android:layout_marginLeft="@dimen/padding_large"
      android:layout_marginRight="@dimen/padding_large"
      android:layout_marginTop="@dimen/padding_medium"
      android:elevation="@dimen/padding_medium"
      app:cardCornerRadius="@dimen/padding_small"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:weightSum="2"
          >
        <ImageView
            android:id="@+id/iv_friend_profile_image"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_margin="@dimen/padding_small"
            android:layout_weight=".2"
            />

        <TextView
            android:id="@+id/tv_friend_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/padding_small"
            android:layout_weight="1.8"
            android:gravity="start|center_vertical"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/font_large"
            tools:text="GOPRO"
            />


      </LinearLayout>

      <ImageView
          android:id="@+id/img_feed"
          android:layout_width="match_parent"
          android:layout_height="280dp"
          android:adjustViewBounds="true"
          android:scaleType="fitXY"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/padding_small"
          android:orientation="horizontal"
          android:padding="@dimen/padding_small"
          android:weightSum="2"
          >

        <TextView
            android:id="@+id/tv_friend_name_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_small"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_small"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold"
            tools:text="GO PRO"
            />

        <TextView
            android:id="@+id/tv_feed_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_small"
            android:textSize="@dimen/font_medium"
            tools:text="Caption Goes here Baby"
            />
      </LinearLayout>

      <ImageView
          android:layout_width="match_parent"
          android:layout_height=".8dp"
          android:background="@color/light_background"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="@dimen/padding_small"
          android:weightSum="2"
          >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3"
            >
          <ImageView
              android:id="@+id/iv_like"
              android:layout_width="0dp"
              android:layout_height="24dp"
              android:layout_weight="1"
              android:src="@drawable/ic_heart_outline_grey"
              />
          <ImageView
              android:id="@+id/iv_comment"
              android:layout_width="0dp"
              android:layout_height="24dp"
              android:layout_weight="1"
              android:src="@drawable/ic_comment_outline_grey"
              />

          <ImageView
              android:id="@+id/iv_share"
              android:layout_width="0dp"
              android:layout_height="24dp"
              android:layout_weight="1"
              android:src="@drawable/ic_share_black_24dp"
              />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="@dimen/padding_small"
            >
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical|end"
              android:paddingRight="@dimen/padding_small"
              android:src="@drawable/ic_heart_small_blue"
              />
          <TextView
              android:id="@+id/tv_no_of_likes"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="end"
              android:gravity="end"
              android:maxLines="1"
              android:paddingLeft="@dimen/padding_small"
              android:textColor="?colorPrimaryDark"
              tools:text="25 Likes"
              />
        </LinearLayout>
      </LinearLayout>

    </LinearLayout>


  </android.support.v7.widget.CardView>

</RelativeLayout>
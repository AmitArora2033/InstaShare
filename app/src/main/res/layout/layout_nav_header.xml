<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/ll_nav_header"
    android:background="@color/light_grey"
    android:orientation="horizontal"
    >

  <ImageView
      android:id="@+id/img_nav_header_profile"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:layout_gravity="center"
      android:layout_margin="@dimen/font_large"
      android:layout_marginLeft="@dimen/padding_xlarge"
      android:src="@drawable/drawable_circle"
      />

  <TextView
      android:id="@+id/user_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_margin="@dimen/font_large"
      android:layout_marginLeft="@dimen/padding_xlarge"
      android:gravity="center"
      android:maxLines="1"
      android:padding="@dimen/padding_medium"
      tools:text="Amit Arora"
      android:textColor="?attr/colorPrimary"
      android:textSize="@dimen/font_large"
      android:textStyle="bold"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_alignParentBottom="true"
      android:alpha=".2"
      android:background="?attr/colorPrimaryDark"
      />


</LinearLayout>